

<%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params:{q: "top_rated"}%>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :keyword, "Search by Movie Title" %>
  <%= form.text_field :q %>
  <%= form.submit "Submit" %>
<% end %>